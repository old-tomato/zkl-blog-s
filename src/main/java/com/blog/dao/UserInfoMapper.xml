<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.dao.UserInfoMapper">
    <resultMap id="defaultMap" type="com.blog.model.UserInfo">
        <id property="id" column="id" />
        <result property="uid" column="uid"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="query" resultMap="defaultMap">
        SELECT id, uid, username, password, create_time
        FROM blog_center.user_info t
        ORDER t.create_time DESC
    </select>

    <insert id="insertNewUser">
        insert into blog_center.user_info (uid, username, password, create_time) value(#{uid} , #{username}, #{password} , now());
    </insert>

</mapper>
